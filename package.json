{
  "name": "mozIntl",
  "description": "Mozilla Intl API extensions",
  "version": "1.0.0-pre",
  "homepage": "http://l20n.org",
  "author": "Mozilla <l10n-drivers@mozilla.org>",
  "license": "Apache-2.0",
  "contributors": [
    {
      "name": "Zibi Braniecki",
      "email": "zbraniecki@mozilla.com"
    },
    {
      "name": "Staś Małolepszy",
      "email": "stas@mozilla.com"
    }
  ],
  "bugs": "https://bugzilla.mozilla.org/enter_bug.cgi?product=Firefox%20OS&component=Gaia::L10n",
  "directories": {
    "lib": "./src"
  },
  "main": "./dist/moz_intl.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/l20n/mozintl.git"
  },
  "keywords": [
    "internationalization",
    "i18n"
  ],
  "engine": {
    "node": ">=5.8"
  },
  "eslintConfig": {
    "ecmaFeatures": {
      "modules": true
    },
    "env": {
      "es6": true
    },
    "rules": {
      "valid-typeof": 1,
      "no-console": 1,
      "no-dupe-args": 2,
      "no-dupe-keys": 2,
      "no-duplicate-case": 2,
      "no-extra-semi": 1,
      "no-func-assign": 2,
      "no-unreachable": 1,
      "no-unexpected-multiline": 2,
      "no-sparse-arrays": 2,
      "block-scoped-var": 1,
      "complexity": [
        1,
        18
      ],
      "dot-location": [
        2,
        "property"
      ],
      "no-implied-eval": 2,
      "no-loop-func": 2,
      "no-magic-numbers": [
        1,
        {
          "ignore": [
            -1,
            0,
            1,
            2
          ]
        }
      ],
      "no-useless-call": 1,
      "no-useless-concat": 1,
      "no-delete-var": 2,
      "no-shadow": 1,
      "no-undef-init": 1,
      "no-unused-vars": 1,
      "consistent-return": 1,
      "curly": [
        2,
        "multi-line"
      ],
      "eqeqeq": 2,
      "no-extend-native": 2,
      "no-extra-bind": 1,
      "no-redeclare": 2,
      "array-bracket-spacing": 1,
      "brace-style": [
        1,
        "1tbs"
      ],
      "no-mixed-spaces-and-tabs": 2,
      "prefer-arrow-callback": 1,
      "prefer-const": 1,
      "prefer-template": 0,
      "prefer-spread": 2,
      "quotes": [
        2,
        "single"
      ],
      "no-var": 1,
      "max-depth": [
        2,
        6
      ],
      "max-len": [
        2,
        80
      ],
      "no-nested-ternary": 2,
      "no-unneeded-ternary": 2,
      "strict": [
        2,
        "global"
      ],
      "indent": [
        1,
        2,
        {
          "SwitchCase": 1
        }
      ]
    }
  },
  "devDependencies": {
    "eslint": "^2.3.0"
  },
  "dependencies": {
    "rollup": "^0.25.4"
  }
}
